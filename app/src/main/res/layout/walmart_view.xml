<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:wmt="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">



        <ImageView
            android:id="@+id/walmartImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:adjustViewBounds="true"
            android:cropToPadding="false"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/walmartPriceTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginLeft="100dp"
            android:layout_marginTop="177dp"
            android:paddingRight="10dp"
            android:text="TextView"
            android:textAlignment="textEnd"
            android:textColor="#00C853"
            android:textStyle="bold|italic"
            android:typeface="normal" />



        <!-- <ImageButton
             android:id="@+id/walmartImageButton"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layout_centerHorizontal="true"
             android:layout_gravity="center_horizontal"
             android:adjustViewBounds="true"
             android:cropToPadding="false"
             android:padding="-5dp"
             android:scaleType="fitXY"
             app:srcCompat="@drawable/placeholder" />-->


    </android.support.v7.widget.CardView>

    <com.walmartlabs.tofa.WalmartBuyNowButton
        android:id="@+id/walmartBuyButton"

        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="210dp"
        wmt:buttonColor="blue"
        wmt:buttonSize="primary"

        />
</RelativeLayout>